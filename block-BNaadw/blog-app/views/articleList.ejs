<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <header>
      <header class="flex">
        <h2>Blog-App</h2>
        <nav>
          <ul class="flex">
            <li>
              <a href="/articles/new"
                ><button type="submit">Add Article</button></a
              >
            </li>
          </ul>
        </nav>
      </header>
    </header>
    <h2>List of Article</h2>
    <div>
      <ul>
        <% articles.forEach(article => { %>
        <li><a href="/aricles/<%= article._id %>"><%= article.title%></a></li>
        <% }) %>
      </ul>
    </div>
  </body>
</html>
